{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "apiManagementServiceName": {
        "type": "string"
      }
    },
    "variables": {
    },
    "resources": [
      {
        "apiVersion": "2020-10-01",        
        "type": "Microsoft.Resources/deployments",
        "name": "linkedEventHubsTemplate",
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "relativePath": "event-hub.json"
          }
        }
      },
      {
        "apiVersion": "2020-10-01",
        "type": "Microsoft.Resources/deployments",
        "name": "linkedPolicyLoggerTemplate",
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "relativePath": "logger-and-policy.json"
          },
          "parameters": {
            "apiManagementServiceName": "[parameters('apiManagementServiceName')]",
            "eventHubsNamespaceName": "[reference('linkedEventHubsTemplate').parameters.eventHubNamespaceName]",
            "eventHubsInstanceName": "[reference('linkedEventHubsTemplate').parameters.eventHubsInstanceName]"
          }
        }
      }
    ],
    "outputs": {
    }
  }
