{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "apiManagementServiceName": {
        "type": "string"
      },
      "resurfaceRules": {
        "type": "string",
        "defaultValue": "include default"
      }
    },
    "variables": {
    },
    "resources": [
      {
        "apiVersion": "2021-04-01",        
        "type": "Microsoft.Resources/deployments",
        "name": "linkedResourcesTemplate",
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "relativePath": "azuredeployresources.json"
          },
          "parameters": {
            "apiManagementServiceName": "[parameters('apiManagementServiceName')]"
          }
        }
      },
      {
        "apiVersion": "2021-04-01",
        "type": "Microsoft.Resources/deployments",
        "name": "linkedContainersTemplate",
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "relativePath": "container-group.json"
          },
          "parameters": {
            "resurfaceRules": {
              "value": "[parameters('resurfaceRules')]"
            }
          }
        },
        "dependsOn": ["[resourceId('Microsoft.Resources/deployments', 'linkedResourcesTemplate')]"]
      }
    ],
    "outputs": {
    }
  }
