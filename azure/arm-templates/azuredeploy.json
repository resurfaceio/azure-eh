{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "apiManagementServiceName": {
        "type": "string"
      },
      "resurfaceRules": {
        "type": "string",
        "defaultValue": "include default"
      }
    },
    "variables": {
    },
    "resources": [
      {
        "apiVersion": "2021-04-01",
        "type": "Microsoft.Resources/deployments",
        "name": "linkedEventHubsTemplate",
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "https://raw.githubusercontent.com/resurfaceio/azure-eh/master/azure/arm-templates/event-hub.json"
          }
        }
      },
      {
        "apiVersion": "2021-04-01",
        "type": "Microsoft.Resources/deployments",
        "name": "linkedLoggerAndPolicyTemplate",
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "https://raw.githubusercontent.com/resurfaceio/azure-eh/master/azure/arm-templates/logger-and-policy.json"
          },
          "parameters": {
            "apiManagementServiceName": {
              "value": "[parameters('apiManagementServiceName')]"
            }
          }
        },
        "dependsOn": ["[resourceId('Microsoft.Resources/deployments', 'linkedEventHubsTemplate')]"]
      },
      {
        "apiVersion": "2021-04-01",
        "type": "Microsoft.Resources/deployments",
        "name": "linkedContainersTemplate",
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "https://raw.githubusercontent.com/resurfaceio/azure-eh/master/azure/arm-templates/container-group.json"
          },
          "parameters": {
            "resurfaceRules": {
              "value": "[parameters('resurfaceRules')]"
            }
          }
        },
        "dependsOn": [
          "[resourceId('Microsoft.Resources/deployments', 'linkedEventHubsTemplate')]",
          "[resourceId('Microsoft.Resources/deployments', 'linkedLoggerAndPolicyTemplate')]"
        ]
      }
    ],
    "outputs": {
    }
  }
